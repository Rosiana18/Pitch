<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets OK -->

  <servlet>
    <servlet-name>register</servlet-name>
    <servlet-class>Servlets.SignUpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>sendmessage</servlet-name>
    <servlet-class>Servlets.SendMessageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>sendmessage</servlet-name>
    <url-pattern>/sendmessage</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>loader</servlet-name>
    <servlet-class>Servlets.DataLoader</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loader</servlet-name>
    <url-pattern>/loader</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>pitch</servlet-name>
    <servlet-class>Servlets.PitchServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>pitch</servlet-name>
    <url-pattern>/pitch</url-pattern>
  </servlet-mapping>
  
    <servlet>
    <servlet-name>search</servlet-name>
    <servlet-class>Servlets.PitchSearchServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>search</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>Servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
<servlet>
    <servlet-name>update</servlet-name>
    <servlet-class>Servlets.UpdateProfileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>update</servlet-name>
    <url-pattern>/update</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>Servlets.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
    <servlet>
    <servlet-name>confirm</servlet-name>
    <servlet-class>Servlets.ConfirmServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>confirm</servlet-name>
    <url-pattern>/confirm</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>feed</servlet-name>
    <servlet-class>Servlets.FeedbackServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>feed</servlet-name>
    <url-pattern>/feed</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>bid</servlet-name>
    <servlet-class>Servlets.BidServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>bid</servlet-name>
    <url-pattern>/bid</url-pattern>
  </servlet-mapping>  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>

</web-app>
